{
    "compilerOptions": {
        "target": "ES2020",
        "module": "commonjs",
        "rootDir": "./src",
        "allowJs": true,
        "checkJs": true,
        "declaration": true,
        "declarationMap": true,
        "outDir": "./",
        "importHelpers": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "skipLibCheck": true
    },
    "include": ["./src"],
    "exclude": ["./api", "./client", "./internal", "./webhook"]
}
